    </bsdf>

    <!--    for anisotropic -->
    <bsdf type="disney">
        <float name="metallic" value="0.0"/>
        <float name="clearcoatGloss" value="0"/>
        <float name="roughness" value="0.5"/>
        <float name="anisotropic" value="0.0"/>
        <float name="clearcoat" value="0.0"/>
    </bsdf>

    <bsdf type="disney">
        <float name="metallic" value="0.0"/>
        <float name="clearcoatGloss" value="0.0"/>
        <float name="roughness" value="0.5"/>
        <float name="anisotropic" value="0.5"/>
        <float name="clearcoat" value="0.0"/>
    </bsdf>

    <bsdf type="disney">
        <float name="metallic" value="0.0"/>
        <float name="clearcoatGloss" value="0.0"/>
        <float name="roughness" value="0.5"/>
        <float name="anisotropic" value="1.0"/>
